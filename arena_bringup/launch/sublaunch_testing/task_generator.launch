<?xml version="1.0" encoding="UTF-8"?>
<launch>

    <arg name="scenarios_json_path" default="$(find simulator_setup)/scenarios/empty_map.json"/>
    <arg name="auto_reset" default="true" />
    <arg name="task_mode" default="scenario"/>
    <arg name="delta" default="1.0"/>
    <arg name="timeout" default="2.0"/>
    <arg name="num_dynamic_obs" default="0"/>
    <arg name="num_static_obs" default="0"/>
    <arg name="min_dyn_radius" default="0.2" />
    <arg name="max_dyn_radius" default="0.3" />
    <arg name="min_static_num_vertices" default="3" />
    <arg name="max_static_num_vertices" default="8" />
    <arg name="min_dyn_vel" default="0.3" />
    <arg name="max_dyn_vel" default="0.3" />
    <arg name="scenario_file" default="empty_map.json" />
    <!--  ************** minute  ***************  -->

    <!--  ************** task generator  ***************  -->
    <node pkg="task_generator" name="task_generator_node" type="task_generator_node.py" output="screen">
        <param name="scenarios_json_path" value="$(arg scenarios_json_path)"/>
        <param name="auto_reset" value="$(arg auto_reset )" />
        <param name="task_mode" value="$(arg task_mode)"/>
        <param name="delta" value="$(arg delta)"/>
        <param name="timeout" value="$(arg timeout)"/>
        <param name="num_dynamic_obs" value="$(arg num_dynamic_obs)"/>
        <param name="num_static_obs" value="$(arg num_static_obs)"/>
        <param name="min_dyn_radius" value="$(arg min_dyn_radius)"/>
        <param name="max_dyn_radius" value="$(arg max_dyn_radius)"/>
        <param name="min_dyn_vel" value="$(arg min_dyn_vel)"/>
        <param name="max_dyn_vel" value="$(arg max_dyn_vel)"/>
        <param name="min_static_num_vertices" value="$(arg min_static_num_vertices)"/>
        <param name="max_static_num_vertices" value="$(arg max_static_num_vertices)" />
        <param name="scenario_file" value="$(arg scenario_file)" />
    </node>
</launch>
